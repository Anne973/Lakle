{% extends "base.html.twig" %}
{% block content %}
    <div class="fh5co-page-title" style="background-image: url({{ asset('images/slide_6.jpg') }});">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12 animate-box">
                    <h1><span class="colored">{{ article.title }}</span></h1><p>{{ article.date|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>
    </div>
    <div id="best-deal">
        <div class="container">
            <div class="row">


                <div class="col-md-8 col-md-offset-2 item-block animate-box" data-animate-effect="fadeIn">


                        <p>{{ article.content|raw }}</p>
                    {% for attachment in article.attachments %}
                        <p><a href="{{ asset ('uploads/articles/attachments/' ~ attachment.attachment)}}">{{ attachment.name }}</a></p>
                        <hr>
                    {% endfor %}


                </div>

            </div>


        </div>

        </div>


{% endblock %}
    {% block javascripts %}


    {% endblock %}
