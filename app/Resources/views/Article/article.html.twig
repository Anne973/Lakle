{% extends "base.html.twig" %}
{% block content %}
    <div class="fh5co-page-title" style="background-image: url({{ asset('images/slide_6.jpg') }});">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12 animate-box">
                    <h1><span class="colored">{{ article.title }}</span></h1><p>{{ article.date|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>
    </div>
    <div id="best-deal">
        <div class="container">
            <div class="row">


                <div class="col-md-8 col-md-offset-2 item-block animate-box" data-animate-effect="fadeIn">


                        <p>{{ article.content }}</p>


                </div>

            </div>


        </div>

        </div>


{% endblock %}
    {% block javascripts %}
        <!-- jQuery -->
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <!-- jQuery Easing -->
        <script src="{{ asset('js/jquery.easing.1.3.js') }}"></script>
        <!-- Bootstrap -->
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <!-- Waypoints -->
        <script src="{{ asset('js/jquery.waypoints.min.js') }}"></script>
        <!-- Flexslider -->
        <script src="{{ asset('js/jquery.flexslider-min.js') }}"></script>

        <!-- MAIN JS -->
        <script src="{{ asset('js/main.js') }}"></script>

    {% endblock %}
