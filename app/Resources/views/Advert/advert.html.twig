{% extends "base.html.twig" %}
{% block title %}{{ advert.type }} {{ advert.address }} - {% endblock %}
{% block description %}Laklé propose des logements de tout type sur
    toute la Guyane. Découvrez notre offre de logements vacants!{% endblock %}
{% block content %}
    <div class="fh5co-page-title" style="background-image: url({{ asset('images/header.jpeg') }});">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12 animate-box">
                    <h1><span class="colored">Logement #{{ advert.id }}</h1>
                </div>
            </div>
        </div>
    </div>
    <div id="fh5co-testimonial">
        <div class="container">
            <div class="row">


                <div class="col-md-4 col-md-offset-1">
                    <div class="flexslider">
                        <ul class="slides">
                            {% for image in advert.images %}
                                <li>

                                    <img src="{{ asset(('uploads/adverts/images/' ~ image.image) | imagine_filter('my_thumb')) }}"
                                         alt="{{ image.image }}">

                                </li>
                            {% endfor %}

                        </ul>
                    </div>


                </div>


                <div class="col-md-6 item-block animate-box" data-animate-effect="fadeIn"
                     style="padding: 10px; border: 2px solid #4CB648; border-radius: 10px">


                    <h4>Type : {{ advert.type }}</h4>

                    <h4>Commune : {{ advert.address }}</h4>
                    <h4>Loyer hors charges: {{ advert.price }} €</h4>
                    <h4>Provisions sur charges: {{ advert.charges }} €</h4>
                    <h4>Frais d'agence: {{ advert.fees }} €</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <h4>A propos du logement : </h4>
                    <p>{{ advert.content|raw }}</p>
                </div>
            </div>


        </div>
    </div>








{% endblock %}
    {% block javascripts %}


        <script>
            $(window).load(function () {
                $('.flexslider').flexslider({
                    animation: "slide"
                });
            });
        </script>

    {% endblock %}