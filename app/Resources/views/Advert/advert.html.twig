{% extends "base.html.twig" %}
{% block content %}
    <div class="fh5co-page-title" style="background-image: url({{ asset('images/slide_6.jpg') }});">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12 animate-box">
                    <h1><span class="colored">Offre #{{ advert.id }}</h1>
                </div>
            </div>
        </div>
    </div>
    <div id="best-deal">
        <div class="container">

            <div class="row">
                <div class="col-sm-4">
                    <div class="flexslider">
                        <ul class="slides">
                            {% for image in advert.images %}
                                <li>

                                    <img src="{{ asset('uploads/adverts/images/' ~ image.image) }}"
                                         alt="{{ image.image }}" >

                                </li>
                            {% endfor %}

                        </ul>
                    </div>



                </div>


                <div class="col-sm-8 ">
                    <div class="panel panel-default " >

                       <div class="panel-heading">Type : {{ advert.type }}</div>
                        <ul class="list-group">
                            <li class="list-group-item">Commune : {{ advert.address }}</li>
                            <li class="list-group-item">Prix: {{ advert.price }}</li>
                        </ul>
                      <div class="panel-body"> <p>DÃ©tail de l'offre : {{ advert.content|raw }}</p></div>

                       </div>
                   </div>
                </div>

            </div>


        </div>




{% endblock %}
    {% block javascripts %}
        <!-- jQuery -->
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <!-- jQuery Easing -->
        <script src="{{ asset('js/jquery.easing.1.3.js') }}"></script>
        <!-- Bootstrap -->
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <!-- Waypoints -->
        <script src="{{ asset('js/jquery.waypoints.min.js') }}"></script>
        <!-- Flexslider -->
        <script src="{{ asset('js/jquery.flexslider-min.js') }}"></script>

        <!-- MAIN JS -->
        <script src="{{ asset('js/main.js') }}"></script>

        <script>
            $(window).load(function() {
                $('.flexslider').flexslider({
                    animation: "slide"
                });
            });
        </script>

    {% endblock %}