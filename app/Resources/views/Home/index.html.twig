    </div>
</div>


<div id="fh5co-blog">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center fh5co-heading animate-box"
                 data-animate-effect="fadeIn">
                <h2>Dernières actualités</h2>

            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for article in lastArticles %}
                <div class="col-md-4 animate-box" data-animate-effect="fadeIn">
                    <a class="fh5co-entry" href="{{ path ('article', {'id': article.id}) }}">
                        <figure>
                            <img src="{{ asset('images/cle.png') }}"
                                 alt="Free Website Template, Free HTML5 Bootstrap Template" class="img-responsive">
                        </figure>
                        <div class="fh5co-copy">
                            <h3>{{ article.title }}</h3>
                            <span class="fh5co-date">{{ article.date|date('d/m/Y') }}</span>
                            <p>{{ article.limitedText }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
            <div class="col-md-12 text-center animate-box" data-animate-effect="fadeIn">
                <p><a href="{{ path('actualites') }}" class="btn btn-primary btn-outline with-arrow">Voir toutes les
                        actualités <i class="icon-arrow-right"></i></a></p>
            </div>
        </div>
    </div>
</div>


<div id="fh5co-agents">
    <div class="container">

            <div class="col-md-12 text-center fh5co-heading white animate-box" data-animate-effect="fadeIn">
                <h2>Nos partenaires</h2>

            </div>


            <div class="col-md-12 animate-box flexslider carousel"
                 data-animate-effect="fadeIn">
                <ul class="slides">
                    <li><img src="{{ asset('images/ctg.png') }}"  alt="ctg" ></li>
                    <li><img src="{{ asset('images/ADAPEI.jpg') }}"  alt="ADAPEI"></li>
                    <li><img src="{{ asset('images/soliha.png' )}}"  alt="PACT"></li>
                    <li><img src="{{ asset('images/logo_DJSCS.png') }}"  alt="djscs"></li>
                    <li><img src="{{ asset('images/caf2.png') }}" alt="caf"></li>
                </ul>



        </div>
    </div>
</div>

    {% endblock %}
    {% block javascripts %}



        <script type="text/javascript">
            $(window).load(function() {
                $('.flexslider').flexslider({
                    animation: "slide",
                    animationLoop: false,
                    itemWidth: 200,
                    itemMargin: 30
                });
            });
            </script>
    {% endblock %}

